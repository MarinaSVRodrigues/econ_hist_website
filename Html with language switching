    <script>
        // Toggle between English and German content
        function toggleLanguage() {
            var englishContent = document.getElementById('englishContent');
            var germanContent = document.getElementById('germanContent');
    
            if (englishContent.style.display === 'none') {
                englishContent.style.display = 'block';
                germanContent.style.display = 'none';
                document.documentElement.lang = "en"; // Set language to English
            } else {
                englishContent.style.display = 'none';
                germanContent.style.display = 'block';
                document.documentElement.lang = "de"; // Set language to German
            }
        }
    </script>
    <!-- Language Switch Button -->
    <div style="position: absolute; top: 75px; right:10px;">
        <button onclick="toggleLanguage()">English/Deutsch</button>
    </div>

